<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<BorderPane prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Editor.Controller">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu text="File">
             <items>

                 <MenuItem onAction="#makeStep" text="Compile" />
                 <MenuItem onAction="#onLoadTest" text="LoadTest" />
                 <MenuItem onAction="#onLoadCode" text="LoadCode" />
                 <MenuItem onAction="#onLoadTask" text="LoadTask" />
                 <MenuItem onAction="#onSaveTest" text="SaveTest" />
                 <MenuItem onAction="#onSaveCode" text="SaveCode" />
                 <MenuItem onAction="#onClose" text="Close" />
             </items>
          </Menu>
          <Menu text="Help">
             <items>
                 <MenuItem onAction="#onAbout" text="About" />
             </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <HBox prefHeight="43.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
   </bottom>
   <center>
      <TextArea fx:id="areaText" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
   <right>
      <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="328.0" prefWidth="268.0" BorderPane.alignment="CENTER">
        <items>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
               <children>
                  <TextArea fx:id="uneditableAreaText" layoutX="-1.0" layoutY="-1.0" prefHeight="160.0" prefWidth="267.0" />
               </children>
            </AnchorPane>
          <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
               <children>
                  <TextArea fx:id="uneditableAreaTask" prefHeight="160.0" prefWidth="268.0" />
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
   </right>
</BorderPane>
